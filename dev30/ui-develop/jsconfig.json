{
    "compilerOptions": {
      "target": "es2017",
      "allowSyntheticDefaultImports": false,
      "baseUrl": "./",
      "paths": {
        "app/*": ["src/*"],
        "public/*": ["public/*"],        
        "components/*": ["src/components/*"],
        "actions/*": ["src/actions/*"],
        "reducers/*": ["src/reducers/*"],
        "views/*": ["src/views/*"],
        "api/*": ["src/api/*"],
        "helpers/*": ["src/helpers/*"],
        "constant/*": ["src/constant/*"],
        "middlewares/*": ["src/middlewares/*"]
      }
    },
    "exclude": ["node_modules"]
}
